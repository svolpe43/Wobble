<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_bg"
    tools:context="com.bme.shawn.wobble.RecordDisplayActivity">

    <com.bme.shawn.wobble.RecordDisplayView
        android:id="@+id/canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.bme.shawn.wobble.TypefacedTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textIsSelectable="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textIsSelectable="false" />
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/time"
                android:layout_toEndOf="@+id/time"
                android:layout_marginLeft="20dp"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/threshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threshold"
                android:textSize="10dp"
                android:layout_marginLeft="20dp" />
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/refractory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refractory"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                android:textIsSelectable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delta"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                android:textIsSelectable="false" />
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/stability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stability"
                android:textSize="10dp"
                android:layout_marginLeft="20dp" />
            <com.bme.shawn.wobble.TypefacedTextView
                android:id="@+id/scalar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scalar"
                android:textSize="10dp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
